# Configuration
set icons
set hidden
set shell sh
set shellopts '-eu'
set ifs "\n"
set scrolloff 10

# Functions
cmd delete ${{
    set -f
    printf "$fx\n"
    printf "delete?[y/n]"
    read ans
    [ $ans = "y" ] && mv $fx ~/.Trash
}}

cmd open ${{
    case $(file --mime-type $f -b) in
        text/*) $EDITOR $fx;;
        *) for f in $fx; do setsid $OPENER $f > /dev/null 2> /dev/null & done;;
    esac
}}


# Mapping
map n
map x delete
map nd push %mkdir<space>-p<space>
map nf push %touch<space>
map ; shell
map o &mimeopen $f
map O $mimeopen --ask $f
