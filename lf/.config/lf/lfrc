# Configuration
set icons
set hidden
set shell zsh
set shellopts '-eu'
set ifs "\n"
set scrolloff 10

# Functions
cmd delete ${{
    set -f
    printf "$fx\n"
    printf "delete?[y/n]"
    read ans
    [ $ans = "y" ] && mv $fx ~/.Trash
}}

cmd open ${{
    case $(file --mime-type $f -b) in
        text/*) $EDITOR $fx;;
        *) for f in $fx; do setsid $OPENER $f > /dev/null 2> /dev/null & done;;
    esac
}}

cmd one_column :{{
    set nopreview
    set ratios 1
    map ~ two_column
}}
cmd two_column :{{
    set preview
    set ratios 1:2
    map ~ three_column
}}
cmd three_column :{{
    set preview
    set ratios 1:2:3
    map ~ one_column
}}

# Mapping
map n
map x delete
map nd push %mkdir<space>-p<space>
map nf push %touch<space>
map ; shell
map o &mimeopen $f
map O $mimeopen --ask $f
map <enter> open
set ratios  1:2:3
map ~ one_column
